# Dr. Şahin Durmuş Dental Website - Environment Variables
# Bu dosyayı .env.local olarak kopyalayın ve değerleri doldurun

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dental_website
DIRECT_URL=postgresql://username:password@localhost:5432/dental_website

# Admin Security
ADMIN_PASSWORD_HASH=your_secure_password_hash_here
ADMIN_SALT=your_unique_salt_here
ADMIN_SESSION_SECRET=your_session_secret_key_here

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=5
SESSION_DURATION_HOURS=24
RATE_LIMIT_WINDOW_MINUTES=15

# Allowed Admin IPs (comma separated, optional)
ADMIN_IP_WHITELIST=127.0.0.1,::1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=admin@dental-website.com

# Website Settings
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Dr. Şahin Durmuş"

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Backup Settings
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Development Settings
NODE_ENV=development
DEBUG_MODE=true 